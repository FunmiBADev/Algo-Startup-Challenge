# Algorand Network Configuration
# Copy this file to .env and configure for your environment

# Choose your network: testnet, mainnet, or localnet
VITE_ALGOD_NETWORK=testnet

# TestNet Configuration (using Algonode public API)
VITE_ALGOD_SERVER=https://testnet-api.algonode.cloud
VITE_ALGOD_PORT=443
VITE_ALGOD_TOKEN=

VITE_INDEXER_SERVER=https://testnet-idx.algonode.cloud
VITE_INDEXER_PORT=443
VITE_INDEXER_TOKEN=

# LocalNet Configuration (uncomment if using localnet)
# VITE_ALGOD_SERVER=http://localhost
# VITE_ALGOD_PORT=4001
# VITE_ALGOD_TOKEN=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
# VITE_INDEXER_SERVER=http://localhost
# VITE_INDEXER_PORT=8980
# VITE_INDEXER_TOKEN=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# KMD Configuration (for LocalNet)
VITE_KMD_SERVER=http://localhost
VITE_KMD_PORT=4002
VITE_KMD_TOKEN=
VITE_KMD_WALLET=unencrypted-default-wallet
VITE_KMD_PASSWORD=

# Backend API URL (for NFT minting)
# For local development: http://localhost:3001
# For production: your backend URL
VITE_API_URL=http://localhost:3001

# Environment
VITE_ENVIRONMENT=development
